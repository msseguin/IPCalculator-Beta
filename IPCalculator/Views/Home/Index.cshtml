@model IPCalculator.Models.IPAddressModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">IP Calculator</h1>
    <form asp-controller="Calculator" method="post">
        <input asp-for="firstRange" typeof="number" max="255" min="0" />.
        <input asp-for="secondRange" typeof="number" max="255" min="0" />.
        <input asp-for="thirdRange" typeof="number" max="255" min="0" />.
        <input asp-for="fourthRange" typeof="number" max="255" min="0" />
        <br />
        <input type="submit" value="submit" id="submitButton" />
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

